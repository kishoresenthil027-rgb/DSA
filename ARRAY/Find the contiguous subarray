#include <stdio.h>

int main() {
    int n;
    int arr[100];
    int current_sum, max_sum;
    int start = 0, end = 0, temp_start = 0;

    // Read number of elements
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Read array elements
    printf("Enter array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Initialize values
    current_sum = arr[0];
    max_sum = arr[0];

    // Kadane's Algorithm with index tracking
    for (int i = 1; i < n; i++) {
        if (current_sum < 0) {
            current_sum = arr[i];
            temp_start = i;
        } else {
            current_sum += arr[i];
        }

        if (current_sum > max_sum) {
            max_sum = current_sum;
            start = temp_start;
            end = i;
        }
    }

    // Output results
    printf("Maximum Subarray Sum: %d\n", max_sum);
    printf("Subarray: ");
    for (int i = start; i <= end; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
