#include <stdio.h>

int main() {
    int n, k;
    int arr[100];
    int temp;

    // Read number of elements
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Read array elements
    printf("Enter array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Read number of rotations
    printf("Enter number of left rotations: ");
    scanf("%d", &k);

    // Handle rotations greater than array size
    k = k % n;

    // Perform left rotation
    for (int i = 0; i < k; i++) {
        temp = arr[0];
        for (int j = 0; j < n - 1; j++) {
            arr[j] = arr[j + 1];
        }
        arr[n - 1] = temp;
    }

    // Display rotated array
    printf("Array after rotation:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
