#include <stdio.h>

int main() {
    int n, k, choice;
    int arr[100];
    int temp;

    // Read array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Read array elements
    printf("Enter array elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Read number of rotations
    printf("Enter number of rotations: ");
    scanf("%d", &k);

    // Reduce unnecessary rotations
    k = k % n;

    // Choose rotation direction
    printf("Enter 1 for Left Rotation, 2 for Right Rotation: ");
    scanf("%d", &choice);

    if (choice == 1) {
        // Left Rotation
        for (int i = 0; i < k; i++) {
            temp = arr[0];
            for (int j = 0; j < n - 1; j++) {
                arr[j] = arr[j + 1];
            }
            arr[n - 1] = temp;
        }
    } 
    else if (choice == 2) {
        // Right Rotation
        for (int i = 0; i < k; i++) {
            temp = arr[n - 1];
            for (int j = n - 1; j > 0; j--) {
                arr[j] = arr[j - 1];
            }
            arr[0] = temp;
        }
    } 
    else {
        printf("Invalid choice!\n");
        return 0;
    }

    // Display rotated array
    printf("Array after rotation:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
